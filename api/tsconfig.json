{
  "compilerOptions": {
    "target": "es2020",          
    "module": "esnext",         
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/src/*": ["src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "fix-imports.cjs"],
  "exclude": ["node_modules", "dist"]
}

FROM node:24-alpine

WORKDIR /backend/api

# Copy package.json and package-lock.json
COPY package*.json ./
RUN npm ci --omit=dev

# Copy tsconfig.json and source code
COPY tsconfig.json ./
COPY src ./src

# Build TypeScript
RUN npm run build

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nextjs -u 1001
RUN chown -R nextjs:nodejs /backend/api

# Switch to non-root user
USER nextjs

# Expose port
EXPOSE 3000

# Start production server
CMD ["npm", "start"]